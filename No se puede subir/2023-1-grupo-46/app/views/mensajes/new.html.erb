<html>
<head>
    <%= stylesheet_link_tag 'chat' %>
</head>

<body>
<div class="page-container">
<div class ="content-wrap">

<%= render 'componentes/header' %>

  <div class="contenedor">

    <h1>Escribir un mensaje en el chat para <%= @libro.titulo %></h1>
    <%= form_for([@libro, @mensaje]) do |form| %>
      <div class="form-group">
        <%= form.label :texto %>
        <%= form.text_field :texto, class: 'form-control' %>
      </div>
      <br>
      <%= form.submit 'Enviar', class: 'boton-enviar' %>
    <% end %>
  
  </div>

</div>
<%= render 'componentes/footer' %>
</div>
</body>

</html>